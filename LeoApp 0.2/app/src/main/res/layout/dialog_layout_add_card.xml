<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/selector_card"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:id="@+id/scrollViewHorizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:tag="FOODMARKS"
                android:adjustViewBounds="true"
                android:background="@drawable/smiley_background_very_satisfied"
                android:contentDescription="@string/textview_placeholder"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/qrcode" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:tag="TESTPLAN"
                android:adjustViewBounds="true"
                android:background="@drawable/smiley_background_satisfied"
                android:contentDescription="@string/textview_placeholder"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/content_paste" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:tag="MESSENGER"
                android:adjustViewBounds="true"
                android:background="@drawable/smiley_background_neutral"
                android:contentDescription="@string/textview_placeholder"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/messenger" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:tag="TUTORING"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:background="@drawable/smiley_background_dissatisfied"
                android:contentDescription="@string/textview_placeholder"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/account_multiple" />


            <ImageButton
                android:id="@+id/imageButton5"
                android:tag="NEWS"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:background="@drawable/smiley_background_bad_mood"
                android:contentDescription="@string/textview_placeholder"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_event_note_white_24px" />

            <ImageButton
                android:layout_width="50dp"
                android:tag="SURVEY"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/imageButton6"
                android:adjustViewBounds="true"
                android:background="@drawable/smiley_background_bad_mood"
                android:contentDescription="@string/textview_placeholder"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/emoticon" />

            <ImageButton
                android:layout_width="50dp"
                android:tag="SCHEDULE"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:id="@+id/imageButton7"
                android:background="@drawable/smiley_background_bad_mood"
                android:contentDescription="@string/textview_placeholder"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/schedule" />

            <ImageButton
                android:layout_width="50dp"
                android:tag="WEATHER"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:id="@+id/imageButton8"
                android:background="@drawable/smiley_background_bad_mood"
                android:contentDescription="@string/textview_placeholder"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/weather_partlycloudy" />

        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/buttonDialog1"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollViewHorizontal"
        android:layout_toLeftOf="@+id/buttonDialog2"
        android:layout_toStartOf="@+id/buttonDialog2"
        android:text="@string/cancel"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/buttonDialog2"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollViewHorizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:text="@string/button_add"
        android:textAllCaps="true" />

</RelativeLayout>