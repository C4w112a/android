<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="6dp" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/space"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:alpha="0.8"
        android:background="@color/colorPrimary"
        android:padding="2dp"
        android:text="DD.MM.YY"
        android:textAlignment="center"
        android:textAppearance="@style/TabTextAppearance"
        android:textColor="@color/colorTabIndicator" />

    <LinearLayout
        android:id="@+id/wrapperlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDate"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/wrapperlayout2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewDate"
            android:gravity="right">

            <LinearLayout
                android:id="@+id/wrapperlayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chatbubble"
                android:elevation="1dp"
                android:orientation="horizontal"
                android:gravity="right"
                android:padding="2dp">

                <RelativeLayout
                    android:id="@+id/wrapperlayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/absender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="Absender"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/colorText"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/nachricht"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/absender"
                        android:text="Nachricht"
                        android:textColor="@color/colorText"
                        android:textSize="18sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/datum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:lines="1"
                    android:text="Datum"
                    android:textColor="@color/colorText"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>