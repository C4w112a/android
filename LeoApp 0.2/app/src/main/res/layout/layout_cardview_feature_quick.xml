<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="200dp">

        <ImageView
            android:id="@+id/info_card_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:tint="@color/colorPrimary"
            card_view:srcCompat="@drawable/qrcode" />

        <TextView
            android:id="@+id/info_title0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textview_placeholder"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/info_text0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal|start"
            android:layout_marginTop="51dp"
            android:text="@string/textview_placeholder"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonCardView0"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:text="@string/textview_placeholder"
            android:textAllCaps="true"
            android:textSize="0sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/info_content0"
            android:layout_height="match_parent"
            android:visibility="gone">

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>