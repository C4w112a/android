<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/actionBarStatistik"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorAccent"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <RelativeLayout
            android:id="@+id/relativeLayoutGraph"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/actionBarStatistik">
            <!--android:layout_above="@+id/bottomNavigationView">-->

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/relativeLayout">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tabLayout"
                    style="@style/TabLayoutDesign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:elevation="4dp" />


            </android.support.v4.view.ViewPager>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@android:color/white"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/heute" />

                <LinearLayout
                    android:id="@+id/linearLayoutIch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewIch"
                        android:layout_width="36dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:scaleType="center"
                        app:srcCompat="@color/colorIch" />

                    <TextView
                        android:id="@+id/textViewIch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="Ich"
                        android:textColor="@color/colorIch" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutSchueler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearLayoutIch"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewSchueler"
                        android:layout_width="36dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        app:srcCompat="@color/colorSchueler" />

                    <TextView
                        android:id="@+id/textViewSchueler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="SchÃ¼ler"
                        android:textColor="@color/colorSchueler" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutLehrer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearLayoutSchueler"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewLehrer"
                        android:layout_width="36dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        app:srcCompat="@color/colorLehrer" />

                    <TextView
                        android:id="@+id/textViewLehrer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="Lehrer"
                        android:textColor="@color/colorLehrer" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutAlle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearLayoutLehrer"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewAlle"
                        android:layout_width="36dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        app:srcCompat="@color/colorAlle" />

                    <TextView
                        android:id="@+id/textViewAlle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="Alle"
                        android:textColor="@color/colorAlle" />

                </LinearLayout>

            </RelativeLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

        </RelativeLayout>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/layout_navigation_header"
        app:menu="@menu/navigation" />

</android.support.v4.widget.DrawerLayout>