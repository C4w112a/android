<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:minHeight="200dp"
                        card_view:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="200dp"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/info_title0"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/title_info_auth_failed"
                                android:textAllCaps="true"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="17sp" />

                            <ProgressBar
                                android:id="@+id/progressBar1"
                                style="?android:attr/progressBarStyleLarge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:indeterminate="true"
                                android:indeterminateTint="@color/colorPrimary"
                                android:indeterminateTintMode="src_in"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/info_text0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="center_horizontal|start"
                                android:layout_marginTop="51dp"
                                android:text="@string/summary_info_auth" />

                            <Button
                                android:id="@+id/buttonCardView0"
                                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:text="@string/button_info_auth"
                                android:textAllCaps="true" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@id/card_view0"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        card_view:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/info_title"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/title_foodmarks"
                                android:textAllCaps="true"
                                android:textColor="@color/colorPrimary"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/info_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="center_horizontal|start"
                                android:layout_marginTop="51dp"
                                android:text="@string/summary_info_foodmark" />

                            <Button
                                android:id="@+id/buttonCardView1"
                                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:text="@string/button_info_try"
                                android:textAllCaps="true" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@id/card_view"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        card_view:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/info_title3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/title_testplan"
                                android:textAllCaps="true"
                                android:textColor="@color/colorPrimary"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/info_text3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="center_horizontal|start"
                                android:layout_marginTop="51dp"
                                android:text="@string/summary_info_testplan" />

                            <Button
                                android:id="@+id/buttonCardView3"
                                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:text="@string/button_info_auth"
                                android:textAllCaps="true" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view4"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@id/card_view3"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        card_view:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/info_title4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/title_messenger"
                                android:textAllCaps="true"
                                android:textColor="@color/colorPrimary"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/info_text4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="center_horizontal|start"
                                android:layout_marginTop="51dp"
                                android:text="@string/summary_info_messenger" />

                            <Button
                                android:id="@+id/buttonCardView4"
                                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:text="@string/button_info_auth"
                                android:textAllCaps="true" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view5"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@id/card_view4"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        card_view:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/info_title5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/title_tutoring"
                                android:textAllCaps="true"
                                android:textColor="@color/colorPrimary"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/info_text5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="center_horizontal|start"
                                android:layout_marginTop="51dp"
                                android:text="@string/summary_info_tutoring" />

                            <Button
                                android:id="@+id/buttonCardView5"
                                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:text="@string/button_info_auth"
                                android:textAllCaps="true" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view6"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@id/card_view5"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        card_view:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/info_title2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/title_news"
                                android:textAllCaps="true"
                                android:textColor="@color/colorPrimary"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/info_text2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="center_horizontal|start"
                                android:layout_marginTop="51dp"
                                android:text="@string/summary_info_news" />

                            <Button
                                android:id="@+id/buttonCardView2"
                                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:text="@string/button_info_try"
                                android:textAllCaps="true" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view7"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@id/card_view6"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        card_view:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/info_title7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/title_survey"
                                android:textAllCaps="true"
                                android:textColor="@color/colorPrimary"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/info_text7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="center_horizontal|start"
                                android:layout_marginTop="51dp"
                                android:text="@string/summary_info_survey" />

                            <Button
                                android:id="@+id/buttonCardView7"
                                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:text="@string/button_info_try"
                                android:textAllCaps="true" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view8"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@id/card_view7"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        card_view:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/info_title8"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/title_plan"
                                android:textAllCaps="true"
                                android:textColor="@color/colorPrimary"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/info_text8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="center_horizontal|start"
                                android:layout_marginTop="51dp"
                                android:text="@string/summary_info_schedule" />

                            <Button
                                android:id="@+id/buttonCardView8"
                                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:text="@string/button_info_auth"
                                android:textAllCaps="true" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </ScrollView>

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/layout_navigation_header"
        app:menu="@menu/navigation" />

</android.support.v4.widget.DrawerLayout>