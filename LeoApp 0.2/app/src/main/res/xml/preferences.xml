        <de.slg.essensqr.TimePickerPreference
            android:key="pref_key_notification_time_test"
            android:summary="@string/settings_summary_notification_time"
            android:title="@string/settings_title_notification_time" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_key_storage_settings"
        android:title="@string/title_messenger">

        <de.slg.messenger.NumberPickerPref
            android:key="pref_key_refresh"
            android:persistent="true"
            android:defaultValue="2"
            android:summary="@string/settings_summary_refresh_interval"
            android:title="@string/settings_title_refresh_interval" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_key_notification_messenger"
            android:summary="@string/settings_summary_notification_messenger"
            android:title="@string/settings_title_notification" />

        <Preference
            android:key="pref_key_sync_messenger"
            android:summary="@string/settings_summary_messenger_sync"
            android:title="@string/settings_title_messenger_sync" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_key_storage_settings"
        android:title="@string/title_news">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_key_notification_news"
            android:summary="@string/settings_summary_notification_news"
            android:title="@string/settings_title_notification" />

        <de.slg.essensqr.TimePickerPreference
            android:key="pref_key_notification_time_news"
            android:summary="@string/settings_summary_notification_time"
            android:title="@string/settings_title_notification_time" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_key_storage_settings"
        android:title="@string/title_survey">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_key_notification_survey"
            android:summary="@string/settings_summary_notification_survey"
            android:title="@string/settings_title_notification" />

        <de.slg.essensqr.TimePickerPreference
            android:key="pref_key_notification_time_survey"
