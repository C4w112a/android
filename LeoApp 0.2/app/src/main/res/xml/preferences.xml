            android:title="@string/settings_title_notification_time" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_key_show_reasons_survey"
            android:summary="@string/settings_summary_reasons_survey"
            android:title="@string/settings_title_reasons_survey" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_key_storage_settings"
        android:title="@string/title_plan">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_key_notification_schedule"
            android:summary="@string/settings_summary_notification_schedule"
            android:title="@string/settings_title_notification" />

        <de.slg.essensqr.TimePickerPreference
            android:key="pref_key_notification_time_schedule"
            android:summary="@string/settings_summary_notification_time"
            android:title="@string/settings_title_notification_time" />

